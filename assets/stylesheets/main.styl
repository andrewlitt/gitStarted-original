/* Check Boxes */

input[type="checkbox"]{
    display:none;
}
input[type="checkbox"] + label span {
    display: inline-block;
    width: 4vh;
    height: 4vh;
    border-radius: 2vh;
    margin-right: 0.5vw;
    background:url(pictures/uncheck1.png);
    background-size:contain;
    cursor:pointer;
}
input[type="checkbox"]:checked + label span {
    background:url(pictures/check1.png);
    background-size:contain;
}

input[type="radio"]{
    display:none;
}
input[type="radio"] + label span {
    display: inline-block;
    width: 4vh;
    height: 4vh;
    border-radius: 0vh;
    margin-right: 0.5vw;
    background:url(pictures/offradio.png);
    background-size:contain;
    cursor:pointer;
}
input[type="radio"]:checked + label span {
    background:url(pictures/onradio.png);
    background-size:contain;
}
